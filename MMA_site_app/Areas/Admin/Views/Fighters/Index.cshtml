@model IEnumerable<MMA_site_app.Models.Fighter>
@{
    ViewData["Title"] = "All fighters";
}
<h3 class="table-title text-center">@ViewData["Title"]</h3>
<p>
    <a asp-action="Create">Create New In area</a>
</p>

<a class="btn btn-sm btn-primary"
   asp-action="Logout" asp-controller="Account">Log Out</a>

@if (Model.Count() == 0) {
    <div class="text-center m-2">
        <form asp-action="SeedDatabase" method="post">
            <button type="submit" class="btn btn-danger">Seed Database</button>
        </form>
    </div>
}
else {
    <table class="table text-center">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Nickname)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.From)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.FightsOutOf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Height)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.HeightCm)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.WeightKg)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Reach)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.LegReach)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Record)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Summary)
                </th>
                <th class="text-center">
                    Img1
                </th>
                <th class="text-center">
                    Img2
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nickname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.From)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FightsOutOf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeightCm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WeightKg)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reach)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LegReach)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Record)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Summary)
                    </td>
                    <td class="text-center">
                        @if (item.ImageInList != null) {
                            <span>+</span>
                        }
                        else {
                            <span>-</span>
                        }
                    </td>
                    <td class="text-center">
                        @if (item.ImageMainProfile != null) {
                            <span>+</span>
                        }
                        else {
                            <span>-</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
